<%= form_with(model: task, local: true, class: 'max-w-md mx-auto') do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= form.text_field :title, class: 'w-full border p-2 rounded' %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= form.text_area :description, class: 'w-full border p-2 rounded' %>
  </div>

  <div class="flex items-center">
    <%= form.submit 'Create Task', class: 'bg-blue-500 text-white py-2 px-4 rounded' %>
  </div>
<% end %>