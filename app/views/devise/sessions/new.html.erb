<!-- app/views/devise/sessions/new.html.erb -->
<div class="container mx-auto h-screen flex items-center justify-center">
  <div class="w-full max-w-md">
    <h2 class="text-2xl font-semibold mb-4">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
      <div class="flex flex-col mb-4">
        <%= f.label :email, class: 'mb-2 text-sm text-gray-600' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
      </div>

      <div class="flex flex-col mb-4">
        <%= f.label :password, class: 'mb-2 text-sm text-gray-600' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-4">
          <%= f.check_box :remember_me, class: 'form-checkbox' %>
          <%= f.label :remember_me, class: 'ml-2 text-sm text-gray-600' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn-submit' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
